    <div class="container">
    a(href="http://localhost:3000/databuah/" class="btn btn-primary my-4") Home
    <h2>Edit Data Buah</h2>
    form(action=`/databuah/${data.id}?_method=PUT` method="post")
        <table cellpadding="5">
        <tr>
            <th>Masukkan Data Buah</th>
        </tr>            
        <tr>
            <td>Kode Buah</td>
            <td>
                input(type="text" name="kode_buah" value=data.kode_buah) 
            </td>
        </tr>  
        <tr>
            <td>Nama Buah</td>
            td
                input(type="text" name="nama" value=data.nama)
            </td>
        <tr>   
        <tr>
            <td>Jumlah Buah Kg</td>
            <td>
                input(type="text" name="jumlah" value=data.jumlah)
            </td>     
        <tr>           
        <tr>
            <td>Harga Buah Kg</td>
            <td>
                input(type="text" name="harga" value=data.harga)
            </td>
        </tr>
        <tr>                   
            <td>
                input(type="submit" value="simpan" class="btn btn-success")
            </td>
        </tr>         
    </div>

    

    <!-- Optional JavaScript -->
